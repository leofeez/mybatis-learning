<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pojo.User">
    <select id="findRecords" resultType="com.pojo.User" parameterType="com.pojo.User">

        select * from user u

        <where>
            <if test="id != null and id !=''">u.id = #{id}</if>

        </where>

    </select>

    <select id="findByPrimaryKey" resultType="com.pojo.User">

        select * from user u where id = #{id}

    </select>
</mapper>